<!-- Modal Choice -->
<div class="modal fade" id="modalchoice" tabindex="-1" role="dialog" aria-labelledby="Language" aria-hidden="true">
  <div class="modal-dialog" style="width: 400px;">
    <div class="modal-content">
      <div class="modal-body">

        <div class="form-group">
          <div class="control-label">
            Ajouter une langue
          </div>

          <select id="_language" class="form-control" id="choice">
            <option value="0"></option>
            {% for l in languages %}
              <option value="{{ l.id }}">{{ l.libelle }}</option>
            {% endfor %}
          </select>
        </div>

        <div class="form-group" style="margin-top: 20px;">
          <div id="_loading"></div>
          <input type="submit" id="_submit" name="_submit" value="OK" class="btn btn-success"/>
        </div>

      </div>
    </div>
  </div>
</div>
