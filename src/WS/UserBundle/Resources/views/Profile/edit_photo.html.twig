{% endblock title %}

{% block fos_user_content %}

    <div class="container" style="margin-top: 40px; margin-bottom: 30px;" id="{{ app.user.image }}">
        {% include "FOSUserBundle:Profile:edit_photo_profil.html.twig" %}
    </div>

{% endblock fos_user_content %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(function () {
            $("#"+$(".image").attr("id")).fileinput({
                initialPreview: [
                    '{{ asset('uploads/profils/'~app.user.image) }}'
                ],
                initialPreviewAsData: true,
                overwriteInitial: true,
                showCaption: false,
                uploadAsync: true,
                allowedFileTypes: ['image'],
                allowedFileExtensions : ['jpg', 'jpeg', 'png'],
                maxImageWidth: 250,
                maxImageHeight: 250,
                maxFileSize: 1000,
                resizeImage: true
            });
        });
    </script>
{% endblock %}