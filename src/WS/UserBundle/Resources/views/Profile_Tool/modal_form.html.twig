<!-- Modal Form -->
<div class="modal fade" id="modalform" tabindex="-1" role="dialog" aria-labelledby="Language" aria-hidden="true">
  <div class="modal-dialog" style="width: 400px;">
    <div class="modal-content">
      <div class="modal-body">

        <form {{ form_enctype(form) }} method="POST" autocomplete="off">
          {{ form_errors(form) }}
          <div class="form-group">
            {{ form_label(form.libelle, 'Libelle', { 'attr' : { 'class' : 'control-label'} }) }} <span class="asterisk red">*</span>
            {{ form_widget(form.libelle, { 'attr' : { 'class' : 'form-control libelle'} }) }}
          </div>

          <div class="form-group">
            {{ form_row(form.nivExpertise) }}
          </div>
          <span class="hidden"> {{ form_rest(form) }} </span>
        </form>

        <div class="form-group" style="margin-top: 20px;">
          <div id="_loading"></div>
          <input type="submit" id="_submit" name="_submit" value="OK" class="btn btn-success"/>
        </div>

      </div>
    </div>
  </div>
</div>
