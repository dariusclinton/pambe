<!-- Modal Form -->
<div class="modal fade" id="modalform" tabindex="-1" role="dialog" aria-labelledby="Language" aria-hidden="true">
  <div class="modal-dialog" style="width: 400px;">
    <div class="modal-content">
      <div class="modal-body">

        <form action="{{ path('profile_realization_index') }}" {{ form_enctype(form) }} method="POST" autocomplete="off">

          {{ form_errors(form) }}

          <div class="form-group">
            {{ form_label(form.libel, 'RÃ©alisation', { 'attr' : { 'class' : 'control-label'} }) }} <span class="asterisk red">*</span>
            {{ form_widget(form.libel, { 'attr' : { 'class' : 'form-control'} }) }}
          </div>

          <div class="form-group">
            {{ form_label(form.description, 'Description', { 'attr' : { 'class' : 'control-label'} }) }}
            {{ form_widget(form.description, { 'attr' : { 'class' : 'form-control'} }) }}
          </div>

          <div class="form-group">
            {{ form_label(form.url, 'Url', { 'attr' : { 'class' : 'control-label'} }) }}
            {{ form_widget(form.url, { 'attr' : { 'class' : 'form-control'} }) }}
          </div>

          <div class="form-group">
            {{ form_label(form.image.file, 'Image', { 'attr' : { 'class' : 'control-label'} }) }}
            {{ form_widget(form.image.file, { 'attr' : { 'class' : 'image file-loading form-control' } }) }}
          </div>

          <div class="form-group" style="margin-top: 20px;">
            <input type="submit" value="Valider" class="btn btn-success"/>
          </div>
          <span class="hidden"> {{ form_rest(form) }} </span>

        </form>

      </div>
    </div>
  </div>
</div>
