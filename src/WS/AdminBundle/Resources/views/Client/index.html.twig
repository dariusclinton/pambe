{% extends "WSAdminBundle::base.html.twig" %}

{% block stylesheets %}
    <!-- iCheck -->
    <link href="{{ asset('admin/vendors/iCheck/skins/flat/green.css') }}" rel="stylesheet">
    <!-- Datatables -->
    <link href="{{ asset('admin/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('admin/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('admin/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('admin/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('admin/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="right_col" role="main">
        {{ parent() }}
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>CLIENT <small>Créer un compte</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Settings 1</a>
                                    </li>
                                    <li><a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        {% trans_default_domain 'FOSUserBundle' %}

                        <form action="{{ path('ws_admin_client') }}" {{ form_enctype(form) }} method="POST" autocomplete="off">

                            {{ form_errors(form) }}

                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.email, 'Email', { 'attr' : { 'class' : 'control-label col-md-3 col-sm-3 col-xs-12'} }) }} <span class="asterisk red">*</span>
                                    {{ form_widget(form.email, { 'attr' : { 'class' : 'form-control col-md-7 col-xs-12'} }) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.username, 'Pseudo', { 'attr' : { 'class' : 'control-label col-md-3 col-sm-3 col-xs-12'} }) }} <span class="asterisk red">*</span>
                                    {{ form_widget(form.username, { 'attr' : { 'class' : 'form-control col-md-7 col-xs-12'} }) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.plainPassword.first, 'Mot de passe', { 'attr' : { 'class' : 'control-label col-md-3 col-sm-3 col-xs-12'} }) }} <span class="asterisk red">*</span>
                                    {{ form_widget(form.plainPassword.first, { 'attr' : { 'class' : 'form-control col-md-7 col-xs-12'} }) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.plainPassword.second, 'Confirmer Mot de passe', { 'attr' : { 'class' : 'control-label col-md-3 col-sm-3 col-xs-12'} }) }} <span class="asterisk red">*</span>
                                    {{ form_widget(form.plainPassword.second, { 'attr' : { 'class' : 'form-control col-md-7 col-xs-12'} }) }}
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.country, 'Pays', { 'attr' : { 'class' : 'control-label col-md-3 col-sm-3 col-xs-12'} }) }} <span class="asterisk red">*</span>
                                    {{ form_widget(form.country, { 'attr' : { 'class' : 'form-control col-md-7 col-xs-12'} }) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.nom, 'Nom', { 'attr' : { 'class' : 'control-label col-md-3 col-sm-3 col-xs-12'} }) }}
                                    {{ form_widget(form.nom, { 'attr' : { 'class' : 'form-control col-md-7 col-xs-12'} }) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.adresse, 'Adresse', { 'attr' : { 'class' : 'control-label col-md-3 col-sm-3 col-xs-12'} }) }}
                                    {{ form_widget(form.adresse, { 'attr' : { 'class' : 'form-control col-md-7 col-xs-12'} }) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.siteWeb, 'Site Web', { 'attr' : { 'class' : 'control-label col-md-3 col-sm-3 col-xs-12'} }) }}
                                    {{ form_widget(form.siteWeb, { 'attr' : { 'class' : 'form-control col-md-7 col-xs-12'} }) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.image.file, 'Photo de profil', { 'attr' : { 'class' : 'control-label col-md-3 col-sm-3 col-xs-12'} }) }}
                                    {{ form_widget(form.image.file, { 'attr' : { 'class' : 'form-control col-md-7 col-xs-12'} }) }}
                                </div>
                            </div>

                            <div class="col-sm-9 col-sm-offset-3" style="margin-top: 40px;">
                                <div class="pull-right">
                                    <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-success"/>
                                </div>
                            </div>
                            <span class="hidden"> {{ form_rest(form) }} </span>

                        </form>


                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>CLIENTS <small>Liste des comptes.</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Settings 1</a>
                                    </li>
                                    <li><a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable-responsive" class="table table-striped table-hover table-dynamic table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Photo de profil</th>
                                <th>Nom</th>
                                <th>Pseudo</th>
                                <th>Email</th>
                                <th>Pays</th>
                                <th>Adresse</th>
                                <th>Site Web</th>
                                <th>Activé ?</th>
                                <th>Options</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for f in clients %}
                                <tr>
                                    <td style="text-align: center;">
                                        <img src="{{ asset('uploads/profils/'~f.image) }}" alt="..." width="60px" height="60px">
                                    </td>
                                    <td style="text-align: center;">
                                        {{ f.nom }}
                                    </td>
                                    <td style="text-align: center;">
                                        {{ f.username }}
                                    </td>
                                    <td style="text-align: center;">
                                        {{ f.email }}
                                    </td>
                                    <td style="text-align: center;">
                                        {{ f.country | country(app.request.locale) }}
                                    </td>
                                    <td style="text-align: center;">
                                        {{ f.adresse }}
                                    </td>
                                    <td style="text-align: center;">
                                        {{ f.siteWeb }}
                                    </td>
                                    <td style="text-align: center;">
                                        {% if f.enabled == true %}
                                            <a class="btn btn-success" title="Désactiver"
                                               href="{{ path('ws_admin_client_ableOrEnable', {'id' : f.id, 'val' : 0}) }}">
                                                Oui
                                            </a>
                                        {%else%}
                                            <a class="btn btn-danger" title="Activer"
                                               href="{{ path('ws_admin_client_ableOrEnable', {'id' : f.id, 'val' : 1}) }}">
                                                Non
                                            </a>
                                        {% endif %}
                                    </td>
                                    <td style="text-align: center;">
                                        <a class="btn btn-success" title="Visualiser"
                                           data-toggle="modal" data-target=".bs-view-{{f.id}}-modal-sm">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a class="btn btn-primary tooltipster-punk" title="Modifier"
                                           href="{{ path('ws_admin_client_update', {'id' : f.id}) }}">
                                            <i class="fa fa-pencil-square-o"></i>
                                        </a>
                                        <a class="btn btn-danger tooltipster-punk" title="Supprimer"
                                           data-toggle="modal" data-target=".bs-{{f.id}}-modal-sm">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                        {% include 'WSAdminBundle:Client:delete_dialog.html.twig' with { 'c': f } %}
                                        {% include 'WSAdminBundle:Client:view_dialog.html.twig' with { 'f': f } %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <!-- iCheck -->
    <script src="{{ asset('admin/vendors/iCheck/icheck.min.js') }}"></script>
    <!-- Datatables -->
    <script src="{{ asset('admin/vendors/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('admin/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('admin/vendors/datatables.net-buttons/js/dataTables.buttons.min.js') }}"></script>
    <script src="{{ asset('admin/vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js') }}"></script>
    <script src="{{ asset('admin/vendors/datatables.net-buttons/js/buttons.flash.min.js') }}"></script>
    <script src="{{ asset('admin/vendors/datatables.net-buttons/js/buttons.html5.min.js') }}"></script>
    <script src="{{ asset('admin/vendors/datatables.net-buttons/js/buttons.print.min.js') }}"></script>
    <script src="{{ asset('admin/vendors/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js') }}"></script>
    <script src="{{ asset('admin/vendors/datatables.net-keytable/js/dataTables.keyTable.min.js') }}"></script>
    <script src="{{ asset('admin/vendors/datatables.net-responsive/js/dataTables.responsive.min.js') }}"></script>
    <script src="{{ asset('admin/vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js') }}"></script>
    <script src="{{ asset('admin/vendors/datatables.net-scroller/js/datatables.scroller.min.js') }}"></script>
    <script src="{{ asset('admin/vendors/jszip/dist/jszip.min.js') }}"></script>
    <script src="{{ asset('admin/vendors/pdfmake/build/pdfmake.min.js') }}"></script>
    <script src="{{ asset('admin/vendors/pdfmake/build/vfs_fonts.js') }}"></script>

    <!-- Datatables -->
    <script>
        $(document).ready(function() {
            var handleDataTableButtons = function() {
                if ($("#datatable-buttons").length) {
                    $("#datatable-buttons").DataTable({
                        dom: "Bfrtip",
                        buttons: [
                            {
                                extend: "copy",
                                className: "btn-sm"
                            },
                            {
                                extend: "csv",
                                className: "btn-sm"
                            },
                            {
                                extend: "excel",
                                className: "btn-sm"
                            },
                            {
                                extend: "pdfHtml5",
                                className: "btn-sm"
                            },
                            {
                                extend: "print",
                                className: "btn-sm"
                            },
                        ],
                        responsive: true
                    });
                }
            };

            TableManageButtons = function() {
                "use strict";
                return {
                    init: function() {
                        handleDataTableButtons();
                    }
                };
            }();

            $('#datatable').dataTable();

            $('#datatable-keytable').DataTable({
                keys: true
            });

            $('#datatable-responsive').DataTable();

            $('#datatable-scroller').DataTable({
                ajax: "js/datatables/json/scroller-demo.json",
                deferRender: true,
                scrollY: 380,
                scrollCollapse: true,
                scroller: true
            });

            $('#datatable-fixed-header').DataTable({
                fixedHeader: true
            });

            var $datatable = $('#datatable-checkbox');

            $datatable.dataTable({
                'order': [[ 1, 'asc' ]],
                'columnDefs': [
                    { orderable: false, targets: [0] }
                ]
            });
            $datatable.on('draw.dt', function() {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_flat-green'
                });
            });

            TableManageButtons.init();
        });
    </script>
    <!-- /Datatables -->
{% endblock %}